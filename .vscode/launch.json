 java.util.Scanner;

public class CassinoOnline {
    private String[] jogos = {"Blackjack", "Roulette", "Poker", "Bingo"};
    private double saldo;

    public CassinoOnline(double saldoInicial) {
        this.saldo = saldoInicial;
    }

    public void exibirMenu() {
        System.out.println("Menu de jogos:");
        for (int i = 0; i < jogos.length; i++) {
            System.out.println((i + 1) + ". " + jogos[i]);
        }
    }

    public void depositar(double valor) {
        saldo += valor;
        System.out.println("Depósito de " + valor + " realizado com sucesso. Saldo atual: " + saldo);
    }

    public void retirar(double valor) {
        if (valor <= saldo) {
            saldo -= valor;
            System.out.println("Retirada de " + valor + " realizada com sucesso. Saldo atual: " + saldo);
        } else {
            System.out.println("Saldo insuficiente para retirar " + valor);
        }
    }

    public static void main(String[] args) {
        CassinoOnline cassino = new CassinoOnline(1000);
        Scanner scanner = new Scanner(System.in);

        while (true) {
            cassino.exibirMenu();
            System.out.print("Digite o número do jogo que deseja jogar ou 'x' para sair: ");
            String input = scanner.nextLine();

            if (input.equalsIgnoreCase("x")) {
                break;
            }

            int escolha = Integer.parseInt(input);
            if (escolha >= 1 && escolha <= cassino.jogos.length) {
                System.out.println("Jogando " + cassino.jogos[escolha - 1] + "...");
            } else {
                System.out.println("Escolha inválida. Tente novamente.");
            }
        }

        scanner.close();
    }
